<%= simple_form_for [current_user, @cost] do |f| %>

<div>
	<%= f.input :name, placeholder: 'Title what you purchased' %>
</div>

<div>
	
	<%= f.input :price, placeholder: 'Price in Rands' %>
</div>

<div>
	
	<%= f.input :reason, placeholder: 'State a reason for your expense' %>
</div>

<div>
	
	<%= f.input :image_url, placeholder: 'Paste link of image here' %>
</div>

<div>
<%= f.button :submit %>
</div>

<% end %>